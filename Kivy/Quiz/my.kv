<MainWindow>:
    name:"Start_Quiz"
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                font_size:30
                text: "ROZPOCZNIJ QUIZ PRZYCISKIEM START"
        Button:
            background_color:0,0,1,1
            color:0.3,0.6,0.7,1
            font_size:40
            text: "START"
            on_release:
                app.root.current="Q1"
                root.manager.transition.direction="left"
